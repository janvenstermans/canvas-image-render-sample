<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resource' type='org.geomajas.gwt2.example.base.client.resource.ShowcaseResource' />

		<g:HTMLPanel ui:field="panel">
			<table>
				<tr>
					<td>
						<g:Label text="RED"/>
					</td>
					<td>
						<g:Label text="MIN:"/>
					</td>
					<td>
						<g:TextBox width="30px" ui:field="redMinText"/>
					</td>
					<td>
						<g:Label text="MAX:"/>
					</td>
					<td>
						<g:TextBox width="30px" ui:field="redMaxText"/>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label text="GREEN"/>
					</td>
					<td>
						<g:Label text="MIN:"/>
					</td>
					<td>
						<g:TextBox width="30px" ui:field="greenMinText"/>
					</td>
					<td>
						<g:Label text="MAX:"/>
					</td>
					<td>
						<g:TextBox width="30px" ui:field="greenMaxText"/>
					</td>
				</tr>
				<tr>
					<td>
						<g:Label text="BLUE"/>
					</td>
					<td>
						<g:Label text="MIN:"/>
					</td>
					<td>
						<g:TextBox width="30px" ui:field="blueMinText"/>
					</td>
					<td>
						<g:Label text="MAX:"/>
					</td>
					<td>
						<g:TextBox width="30px" ui:field="blueMaxText"/>
					</td>
				</tr>
				<tr>
					<td colspan="2">
						<g:Label>Contrast</g:Label>
					</td>
					<td colspan="3">
						<g:TextBox ui:field="contrastTextBox"/>
					</td>
				</tr>
			</table>
		</g:HTMLPanel>

</ui:UiBinder> 