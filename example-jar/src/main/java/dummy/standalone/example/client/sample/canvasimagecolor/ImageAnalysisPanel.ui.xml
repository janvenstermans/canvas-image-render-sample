<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='resource' type='org.geomajas.gwt2.example.base.client.resource.ShowcaseResource' />

	<g:HorizontalPanel ui:field="totalPanel">
		<g:VerticalPanel spacing="10" width="200px">
			<g:Label width="180px" text="Analysis"/>
			<g:VerticalPanel spacing="10">
				<g:CheckBox ui:field="checkBoxAlpha">Alpha</g:CheckBox>
				<g:CheckBox ui:field="checkBoxR">Red</g:CheckBox>
				<g:CheckBox ui:field="checkBoxG">Green</g:CheckBox>
				<g:CheckBox ui:field="checkBoxB">Blue</g:CheckBox>
				<g:RadioButton ui:field="dataOriginalRadioButton" name="dataSource">Data from original image.</g:RadioButton>
				<g:RadioButton ui:field="dataCurrentRadioButton" name="dataSource">Data from current image.</g:RadioButton>
				<g:Button ui:field="drawDataBtn" width="180px">Show in graph</g:Button>
			</g:VerticalPanel>
			<g:Label width="180px" text="Image Radiometry values"/>
			<g:HTMLPanel>
				<table>
					<tr>
						<td>
							<g:Label text="RED"/>
						</td>
						<td>
							<g:Label text="MIN:"/>
						</td>
						<td>
							<g:TextBox width="30px" ui:field="redMinText"/>
						</td>
						<td>
							<g:Label text="MAX:"/>
						</td>
						<td>
							<g:TextBox width="30px" ui:field="redMaxText"/>
						</td>
					</tr>
					<tr>
						<td>
							<g:Label text="GREEN"/>
						</td>
						<td>
							<g:Label text="MIN:"/>
						</td>
						<td>
							<g:TextBox width="30px" ui:field="greenMinText"/>
						</td>
						<td>
							<g:Label text="MAX:"/>
						</td>
						<td>
							<g:TextBox width="30px" ui:field="greenMaxText"/>
						</td>
					</tr>
					<tr>
						<td>
							<g:Label text="BLUE"/>
						</td>
						<td>
							<g:Label text="MIN:"/>
						</td>
						<td>
							<g:TextBox width="30px" ui:field="blueMinText"/>
						</td>
						<td>
							<g:Label text="MAX:"/>
						</td>
						<td>
							<g:TextBox width="30px" ui:field="blueMaxText"/>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:VerticalPanel>
		<g:SimplePanel ui:field="chart" width="100%" height="100%"/>
	</g:HorizontalPanel>


</ui:UiBinder> 